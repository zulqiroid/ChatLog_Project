<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Top stroke -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="1dp"
                android:color="@color/color6" />
        </shape>
    </item>

    <!-- Bottom stroke -->
    <item
        android:bottom="1dp"> <!-- Adjust bottom value to match stroke width -->
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="1dp"
                android:color="@color/color6" />
        </shape>
    </item>

    <!-- Background color -->
    <item
        android:top="1dp"
        android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/color8" />
        </shape>
    </item>

</layer-list>