<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/reciever_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_10sdp"
    android:background="?android:attr/selectableItemBackground">

    <TextView
        android:id="@+id/sender_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_2sdp"
        android:layout_marginBottom="-5dp"
        android:layout_alignParentTop="true"
        android:text="Sender Name"
        android:textColor="@color/color5"
        android:textSize="@dimen/_10sdp"
        android:visibility="gone"/>
    <RelativeLayout
        android:id="@+id/r_message_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sender_name"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_2sdp"
        android:layout_alignParentStart="true"
        android:background="@drawable/reciever_message_box">
        <RelativeLayout
            android:id="@+id/layout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible">

        <RelativeLayout
            android:id="@+id/actual_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/reciever_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxWidth="250dp"
                android:maxHeight="300dp"
                android:padding="@dimen/_5sdp"
                android:scaleType="fitCenter"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/reciever_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/reciever_image"
                android:maxWidth="250dp"
                android:paddingStart="@dimen/_7sdp"
                android:paddingEnd="@dimen/_7sdp"
                android:paddingTop="@dimen/_7sdp"
                android:text="D"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp" />
        </RelativeLayout>
        <TextView
            android:id="@+id/receiver_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00: 00 PM"
            android:gravity="end"
            android:layout_marginStart="@dimen/_10sdp"
            android:textColor="@color/color5"
            android:textSize="@dimen/_8sdp"
            android:layout_below="@id/actual_data"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:singleLine="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_7sdp"
            android:paddingStart="@dimen/_5sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/voice_here"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp">
                <ImageButton
                    android:id="@+id/play_pause_btn"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:background="@color/color9"
                    android:src="@drawable/play_icon_w"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:visibility="visible"/>
                <View
                    android:id="@+id/bar"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_2sdp"
                    android:layout_centerVertical="true"
                    android:background="@color/white"
                    android:layout_toEndOf="@+id/play_pause_btn"/>
                <Chronometer
                    android:id="@+id/duration"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_toEndOf="@+id/bar"
                    android:layout_centerVertical="true"
                    android:text="00 00"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/_5sdp"
                    />
            </RelativeLayout>

            <TextView
                android:id="@+id/voice_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00: 00 PM"
                android:gravity="end"
                android:layout_marginStart="@dimen/_10sdp"
                android:textColor="@color/color5"
                android:textSize="@dimen/_8sdp"
                android:layout_below="@id/voice_here"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:singleLine="true"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/layout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="horizontal"
            android:layout_margin="@dimen/_5sdp"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            >
            <View
                android:id="@+id/snapBlock"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:background="@drawable/trues_snap_background"
                />
            <ImageView
                android:id="@+id/snap_img"
                android:layout_width="0dp"
                android:layout_height="0dp"
                />
            <TextView
                android:id="@+id/snap_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:textColor="@color/white"
                android:text="Snap, Tap to see"
                />


        </LinearLayout>


    </RelativeLayout>

    <ImageView
        android:id="@+id/r_emoji_reaction"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="-5dp"
        android:layout_toEndOf="@id/r_message_layout"
        android:src="@drawable/heart"
        android:visibility="gone" />

</RelativeLayout>