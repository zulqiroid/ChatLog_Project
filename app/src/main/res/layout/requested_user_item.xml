<!-- Advanced Layout XML file for displaying a friend request in the RecyclerView -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_card"
    android:orientation="vertical"
    android:padding="10dp"
    android:elevation="8dp"
    android:layout_marginBottom="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_5sdp"> <!-- Overall elevation for a slight shadow effect -->

    <!-- Profile Picture -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:contentDescription="User's profile picture"
        android:scaleType="centerCrop"
        android:src="@drawable/user_w"
        app:civ_border_color="@color/white"
        app:civ_border_width="2dp" />

    <!-- User's Name -->
    <TextView
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:layout_toEndOf="@id/profile_image"
        android:text="User Name"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:shadowColor="@color/color5"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2" />

    <!-- Buttons Container -->
    <LinearLayout
        android:id="@+id/buttons_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/user_name"
        android:layout_toEndOf="@id/profile_image"
        >

        <!-- Accept Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/accept_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/custom_btn"
            android:padding="@dimen/_10sdp"
            android:drawableStart="@drawable/ic_check"
            android:text="Accept"
            android:layout_marginEnd="@dimen/_5sdp"
            android:textColor="@color/color2"
            android:elevation="2dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/reject_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/_10sdp"
            android:background="@drawable/button"
            android:drawableStart="@drawable/baseline_close_24"
            android:text="Reject"
            android:layout_marginStart="@dimen/_5sdp"
            android:textColor="@color/color2"
            android:elevation="2dp" />
    </LinearLayout>
</RelativeLayout>
