<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.setting_name"
    android:background="@color/color9">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color8"
            app:title="Display Name"
            app:navigationIcon="@drawable/back_w"
            app:titleTextColor="@android:color/white"/>
    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tell us about yourself in a few words. Your bio helps others know you better."
            android:textColor="@color/color4"
            android:textSize="@dimen/_12sdp"
            android:gravity="center"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:lineSpacingExtra="@dimen/_5sdp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="YOUR BIO"
               android:textColor="@color/color2"
               android:textStyle="bold"
               android:textSize="@dimen/_14sdp"
               android:layout_marginBottom="@dimen/_5sdp"
               />
            <EditText
                android:id="@+id/bio_edtxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="bio here"
                android:textColor="@color/white"/>

        </LinearLayout>



        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/update_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Update"
            android:fontFamily="@font/suse_semibold"
            android:textAllCaps="false"
            android:textSize="@dimen/_14sdp"
            android:background="@drawable/custom_btn"
            android:textColor="@color/color2"/>




    </LinearLayout>
</RelativeLayout>