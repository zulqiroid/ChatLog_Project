<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color9"
    tools:context=".activities.SettingScreen">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color8"
            app:title="Settings"
            app:navigationIcon="@drawable/back_w"
            app:titleTextColor="@android:color/white"/>
    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:id="@+id/profile_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:padding="@dimen/_15sdp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_120sdp"
            android:transitionName="image"
            android:scaleType="centerCrop"
            android:src="@drawable/user_w"
            app:civ_border_color="@color/white"
            app:civ_border_width="@dimen/_2sdp" />

        <ImageButton
            android:id="@+id/edit_btn"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignEnd="@+id/profile_image"
            android:layout_alignBottom="@+id/profile_image"
            android:elevation="@dimen/_10sdp"
            android:src="@drawable/edit_b"
            android:scaleType="centerInside"
            android:background="@drawable/button"
            android:padding="@dimen/_5sdp"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/profile_layout"
        android:layout_marginTop="@dimen/_15sdp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MY ACCOUNT"
            android:textStyle="bold"
            android:textSize="@dimen/_15sdp"
            android:textColor="@color/color3"
            android:fontFamily="@font/suse_bold"
            android:layout_marginBottom="@dimen/_5sdp"
            android:paddingStart="@dimen/_10sdp"/>

        <LinearLayout
            android:id="@+id/name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:background="@drawable/background_gradient">
             <TextView
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:text="Name"
                 android:textSize="@dimen/_16sdp"
                 android:textColor="@color/white"
                 />
            <TextView
                android:id="@+id/name_here"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_weight="2"
                android:text="name here"
                android:ellipsize="end"
                android:textSize="@dimen/_16sdp"
                android:textColor="@color/color5"
                android:textAlignment="textEnd"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/username_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:background="@drawable/background_gradient">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Username"
                android:textSize="@dimen/_16sdp"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/username_here"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:maxLines="1"
                android:text="Username here"
                android:ellipsize="end"
                android:textSize="@dimen/_16sdp"
                android:textColor="@color/color5"
                android:textAlignment="textEnd"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/birthday_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:background="@drawable/background_gradient">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Birthday"
                android:textSize="@dimen/_16sdp"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/birthday_here"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:maxLines="1"
                android:text="birthday here"
                android:ellipsize="end"
                android:textSize="@dimen/_16sdp"
                android:textColor="@color/color5"
                android:textAlignment="textEnd"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/bio_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:background="@drawable/background_gradient">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Bio"
                android:textSize="@dimen/_16sdp"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/bio_here"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:maxLines="1"
                android:text="Bio here"
                android:ellipsize="end"
                android:textSize="@dimen/_16sdp"
                android:textColor="@color/color5"
                android:textAlignment="textEnd"
                />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>