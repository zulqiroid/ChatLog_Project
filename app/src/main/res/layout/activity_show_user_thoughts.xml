<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.View_tought"
    android:background="#80000000"
    android:backgroundTint="#80000000"
    android:name=".NextActivity"
    android:theme="@style/AppTheme.NextActivity">
    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_20sdp">
        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/b_w"/>
        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/_16sdp"
            android:gravity="center"
            android:text="name here"
            android:layout_marginEnd="@dimen/_30sdp"/>
    </Toolbar>
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_100sdp">
        <!-- Circular Image -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_below="@id/any_thought_txtView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:src="@drawable/user_w"
            app:civ_border_color="@color/color2"
            app:civ_border_overlay="true"
            app:civ_border_width="1dp" />

            <TextView
                android:id="@+id/any_thought_txtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="-20dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/any_thought_background"
                android:maxWidth="@dimen/_200sdp"
                android:gravity="center"
                android:text="Thoughts here"
                android:padding="@dimen/_20sdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp"
                />
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/white"
            android:text="00: 00 pm"/>



    </RelativeLayout>


</RelativeLayout>