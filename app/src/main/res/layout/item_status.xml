<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_status"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"

    android:layout_marginTop="@dimen/_15sdp"
    android:paddingBottom="@dimen/_5sdp"
    android:background="?selectableItemBackground">

    <RelativeLayout
        android:id="@+id/image_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_8sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_centerInParent="true"
            android:padding="6dp"
            android:src="@drawable/user_w"
            app:civ_border_color="@color/white"
            app:civ_border_width="1dp"/>

        <com.devlomi.circularstatusview.CircularStatusView
            android:id="@+id/circular_status_view"
            android:layout_width="@dimen/_51sdp"
            android:layout_height="@dimen/_51sdp"
            app:portion_color="@color/color1"
            android:layout_centerInParent="true"
            app:portion_spacing="5dp"
            app:portion_width="@dimen/_1sdp"
            app:portions_count="5" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/image_layout"
        android:paddingTop="@dimen/_2sdp"
        android:paddingBottom="@dimen/_2sdp"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="username"
            android:textColor="@color/color2"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold" />

    </LinearLayout>


</RelativeLayout>
